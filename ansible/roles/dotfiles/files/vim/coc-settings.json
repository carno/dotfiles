{
    "coc.preferences.willSaveHandlerTimeout": 3000,
    "diagnostic-languageserver.filetypes": {
        "dockerfile": "hadolint",
        "markdown": "vale",
        "python": "mypy",
        "sh": "shellcheck"
    },
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "args": [
                "serve"
            ],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {}
        }
    },
    "python.formatting.provider": "black",
    "python.linting.ruffEnabled": true,
    "python.linting.ruffArgs": [
        "--ignore E501"
    ],
    "pyright.inlayHints.functionReturnTypes": false,
    "pyright.inlayHints.variableTypes": false,
    "yaml.format.enable": true,
    "yaml.schemas": {
        "https://gitlab.com/gitlab-org/gitlab/-/raw/master/app/assets/javascripts/editor/schema/ci.json": [
            ".gitlab-ci.yml",
            ".gitlab-ci.yaml"
        ],
        "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": [
            "docker-compose.yml",
            "docker-compose.yaml"
        ],
        "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/playbook.json": [
            "playbook.yml",
            "playbook.yaml",
            "site.yml",
            "site.yaml",
            "playbooks/*.yml",
            "playbooks/*.yaml"
        ],
        "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/tasks.json": [
            "tasks/*.yml",
            "handlers/*.yml",
            "tasks/*.yaml",
            "handlers/*.yaml"
        ],
        "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/vars.json": [
            "playbooks/vars/*.yml",
            "vars/*.yml",
            "defaults/*.yml",
            "host_vars/*.yml",
            "group_vars/*.yml",
            "playbooks/vars/*.yaml",
            "vars/*.yaml",
            "defaults/*.yaml",
            "host_vars/*.yaml",
            "group_vars/*.yaml"
        ],
        "https://raw.githubusercontent.com/ansible/ansible-lint/main/src/ansiblelint/schemas/inventory.json": [
            "inventory.yml",
            "inventory.yaml"
        ],
        "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/helmfile.json": [
            "Chart.yaml"
        ],
        "https://raw.githubusercontent.com/GoogleContainerTools/skaffold/master/docs/content/en/schemas/v2beta28.json": [
            "skaffold*.yaml"
        ],
        "https://docs.renovatebot.com/renovate-schema.json": [
            "renovate.json"
        ]
    }
}
