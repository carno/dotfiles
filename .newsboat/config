# my colors
include ~/.newsboat/colors

# tt-rss
urls-source "ttrss"
include ~/.newsboat/ttrss

# my settings
browser "firefox -new-tab %u 1>/dev/null 2>&- &"
auto-reload yes
reload-time 60
suppress-first-reload yes
show-keymap-hint no
max-items 100
error-log "~/.newsboat/error.log"
cleanup-on-quit yes
keep-articles-days 15
download-retries 2
download-full-page yes
notify-format "RSS: %d (%n)"
notify-program "~/dokumenty/github/scripts/newsboat-notifyd.sh"
html-renderer "elinks -dump -force-html"
reload-threads 4
feed-sort-order title

# macro
macro p toggle-article-read "unread"

# key-bindings
unbind-key o
unbind-key O
bind-key o open-in-browser-and-mark-read 
bind-key O open-in-browser

# podbeuter
download-path "~/dokumenty/podcasts/%n"
player "mocp"
